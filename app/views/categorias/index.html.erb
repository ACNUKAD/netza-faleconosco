<div class="page-header">
  <%= link_to new_categoria_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Categoria
  <% end %>
  <h1>Listando categorias</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @categorias) do |categoria| %>
        <td><%= categoria.nome %></td>
        <td><%= link_to 'Mostrar', categoria %></td>
        <td><%= link_to 'Editar', edit_categoria_path(categoria) %></td>
        <td><%= link_to 'Apagar', categoria, method: :delete, data: { confirm: 'Tem certeza ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<div class="page-header">
  <%= link_to situacoes_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_situacao_path(@situacao), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h1>Mostrar situação</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nome:</dt>
  <dd><%= @situacao.nome %></dd>

  <dt>Cor:</dt>
  <dd style="background-color:<%= @situacao.cor %>"><%= @situacao.cor %></dd>

</dl>
